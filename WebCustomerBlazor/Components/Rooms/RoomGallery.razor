@using BLL.DTOs.Room.Public
@if (Images.Count > 0)
{
    <div class="card" style="padding:12px;">
        <img style="width:100%;height:420px;object-fit:cover;border-radius:18px;" src="@Images[active].Url" />
        <div style="display:flex;gap:10px;overflow:auto;margin-top:10px;">
            @for (int i = 0; i < Images.Count; i++)
            {
                <img src="@Images[i].Url"
                     style="width:120px;height:78px;object-fit:cover;border-radius:14px;cursor:pointer;
                     border:2px solid @(i == active ? "#bfdbfe" : "transparent");"
                     @onclick="() => active = i" />
            }
        </div>
    </div>
}

@code {
    [Parameter] public List<RoomImagePublicDto> Images { get; set; } = new();
    private int active = 0;
}
