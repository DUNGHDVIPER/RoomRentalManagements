@model WebAdmin.MVC.Models.Rooms.RoomCreateVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Room";
}
<div class="container">
    <div class="card pad-20">
        <div class="card-head">
            <div class="card-title">Create Room</div>
            <a class="link" href="/Rooms/Index">Back</a>
        </div>

        <form method="post" class="form-grid">
            @Html.AntiForgeryToken()

            <div class="fg">
                <label class="lbl">Name</label>
                <input class="inp" asp-for="Name" placeholder="Room 101" />
            </div>

            <div class="fg">
                <label class="lbl">Block</label>
                <input class="inp" asp-for="Block" />
            </div>

            <div class="fg">
                <label class="lbl">Floor</label>
                <input class="inp" asp-for="Floor" />
            </div>

            <div class="fg">
                <label class="lbl">Price</label>
                <input class="inp" asp-for="Price" />
            </div>

            <div class="fg">
                <label class="lbl">Status</label>
                <select class="inp" asp-for="Status">
                    <option>Available</option>
                    <option>Occupied</option>
                    <option>Maintenance</option>
                </select>
            </div>

            <div class="form-actions">
                <a class="link" href="/Rooms/Index">Cancel</a>
                <button class="btn-gradient" type="submit">Create</button>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="err">
                    @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>• @e.ErrorMessage</div>
                    }
                </div>
            }
        </form>
    </div>
</div>
