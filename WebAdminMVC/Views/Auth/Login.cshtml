@model WebAdmin.MVC.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h2 class="mb-3">Login</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <div asp-validation-summary="All"></div>
    </div>
}

<form asp-action="Login" method="post" class="card p-3" style="max-width:520px;">
    @Html.AntiForgeryToken()

    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="admin@system.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    <div class="text-muted mt-3" style="font-size:0.9rem;">
        Demo accounts:<br />
        - admin@system.com / Admin@123456<br />
        - host@demo.com / Host@123
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}