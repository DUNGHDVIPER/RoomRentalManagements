@model WebAdmin.MVC.Models.Auth.LoginVm
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h2 class="mb-3">Login</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <div asp-validation-summary="All"></div>
    </div>
}

<form asp-action="Login" method="post" class="card p-3" style="max-width:520px;">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label">Role</label>
        <select asp-for="Role" class="form-select">
            <option value="Host">Host</option>
            <option value="Admin">Admin</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    <div class="text-muted mt-3" style="font-size:0.9rem;">
        Demo accounts:<br />
        - admin / 123 (Admin or Host)<br />
        - host / 123 (Host)
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}