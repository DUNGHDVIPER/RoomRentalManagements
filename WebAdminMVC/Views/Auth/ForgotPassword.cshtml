@model WebAdmin.MVC.Models.Auth.ForgotPasswordVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Forgot Password";
}
<div class="center">
    <div class="ui-card auth-card">
        <h1 class="h1">Forgot Password</h1>
        <p class="muted">Stub screen (FE-only)</p>

        @if (ViewBag.Message != null)
        {
            <div class="alert">@ViewBag.Message</div>
        }

        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="label">Email</div>
                <input class="input" asp-for="Email" />
            </div>

            <div class="row-end">
                <a class="btn btn-ghost" href="/Auth/Login">Back</a>
                <button class="btn btn-primary" type="submit">Send (stub)</button>
            </div>
        </form>
    </div>
</div>
