@model WebAdmin.MVC.Models.Users.UserEditVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit User";
}
<div class="ui-card form-card">
    <div class="toolbar">
        <div>
            <h1 class="h1">Edit User</h1>
            <div class="muted">FE-only edit</div>
        </div>
        <div class="toolbar-right">
            <a class="btn btn-ghost" href="/Users/Index">Back</a>
        </div>
    </div>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-row">
            <div class="form-group">
                <div class="label">Email</div>
                <input class="input" asp-for="Email" />
            </div>
            <div class="form-group">
                <div class="label">Role</div>
                <select class="input" asp-for="Role">
                    <option>SuperAdmin</option>
                    <option>Admin</option>
                    <option>Host</option>
                    <option>Customer</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="label">Status</div>
            <select class="input" asp-for="Status">
                <option>Active</option>
                <option>Locked</option>
            </select>
        </div>

        <div class="row-end mt">
            <a class="btn btn-ghost" href="/Users/Index">Cancel</a>
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>
