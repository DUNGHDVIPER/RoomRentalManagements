@model WebAdmin.MVC.Models.Users.UserCreateVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create User";
}
<div class="ui-card form-card">
    <div class="toolbar">
        <div>
            <h1 class="h1">Create User</h1>
            <div class="muted">FE-only create</div>
        </div>
        <div class="toolbar-right">
            <a class="btn btn-ghost" href="/Users/Index">Back</a>
        </div>
    </div>

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="form-row">
            <div class="form-group">
                <div class="label">Email</div>
                <input class="input" asp-for="Email" placeholder="user@email.com" />
            </div>
            <div class="form-group">
                <div class="label">Role</div>
                <select class="input" asp-for="Role">
                    <option>SuperAdmin</option>
                    <option>Admin</option>
                    <option>Host</option>
                    <option>Customer</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="label">Status</div>
            <select class="input" asp-for="Status">
                <option>Active</option>
                <option>Locked</option>
            </select>
        </div>

        <div class="row-end mt">
            <a class="btn btn-ghost" href="/Users/Index">Cancel</a>
            <button class="btn btn-primary" type="submit">Create</button>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert mt">
                @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>• @e.ErrorMessage</div>
                }
            </div>
        }
    </form>
</div>
