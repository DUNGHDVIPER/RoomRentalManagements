@model List<WebAdmin.MVC.Models.Roles.RoleListItemVm>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Roles";
}
<div class="toolbar">
    <div>
        <h1 class="h1">Roles</h1>
        <div class="muted">FE-only roles CRUD</div>
    </div>
    <div class="toolbar-right">
        <a class="btn btn-primary" href="/Roles/Create">+ Create Role</a>
    </div>
</div>

<div class="ui-card">
    <div class="table-wrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Role</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td class="strong">@r.Name</td>
                        <td>
                            <a class="btn btn-ghost" href="/Roles/Edit/@r.Name">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
