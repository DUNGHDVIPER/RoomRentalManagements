@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Http

@{
    var path = Http.HttpContext?.Request?.Path.Value?.ToLower() ?? "/";
    bool IsActive(string startsWith)
        => path.StartsWith(startsWith.ToLower());
}

<div class="brand">
    <div class="brand-logo">H</div>
    <div>
        <div class="brand-title">Host<span class="brand-accent">Portal</span></div>
        <div class="brand-sub">Operate • Rooms • Billing</div>
    </div>
</div>

<div class="nav-section">MAIN</div>
<nav class="nav">
    <a class="nav-item @(IsActive("/host/dashboard") ? "active" : "")" href="/Host/Dashboard">
        <span class="nav-ic">▦</span>
        <span>Dashboard</span>
    </a>

    <a class="nav-item @(IsActive("/host/rooms") ? "active" : "")" href="/Host/Rooms">
        <span class="nav-ic">⌂</span>
        <span>Rooms</span>
    </a>

    <a class="nav-item @(IsActive("/host/tenants") ? "active" : "")" href="/Host/Tenants">
        <span class="nav-ic">👥</span>
        <span>Tenants</span>
    </a>

    <a class="nav-item @(IsActive("/host/contracts") ? "active" : "")" href="/Host/Contracts">
        <span class="nav-ic">⎘</span>
        <span>Contracts</span>
    </a>
</nav>

<div class="nav-section">FINANCE</div>
<nav class="nav">
    <a class="nav-item @(IsActive("/host/bills") ? "active" : "")" href="/Host/Bills">
