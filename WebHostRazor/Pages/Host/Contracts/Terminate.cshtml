@page
@model WebHostRazor.Pages.Host.Contracts.TerminateModel
@{
    ViewData["Title"] = "Terminate Contract";
}

<h2>Terminate Contract</h2>

@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger">@err</div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <div asp-validation-summary="All"></div>
    </div>
}

<div class="mb-3">
    <a class="btn btn-outline-secondary" asp-page="./Details" asp-route-id="@Model.Vm.ContractId">← Back</a>
</div>

<form method="post" class="row g-3">
    <input type="hidden" asp-for="Vm.ContractId" />

    <div class="col-md-4">
        <label asp-for="Vm.TerminateDate" class="form-label"></label>
        <input asp-for="Vm.TerminateDate" type="date" class="form-control" />
        <span asp-validation-for="Vm.TerminateDate" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Vm.Reason" class="form-label"></label>
        <input asp-for="Vm.Reason" class="form-control" />
        <span asp-validation-for="Vm.Reason" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-danger" type="submit">Terminate</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}