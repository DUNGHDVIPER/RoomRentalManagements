@page
@model WebHostRazor.Pages.Host.Rooms.CheckInOut.CheckInModel

<div class="modal-overlay">
    <div class="modal-card">

        <div class="modal-header">
            <h3>Check-in - Room @Model.RoomId</h3>
            <a asp-page="../Index" class="modal-close">✕</a>
        </div>

        <form method="post" class="modal-body">
            <input type="hidden" asp-for="RoomId" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label>Tenant</label>
                <select asp-for="TenantId" class="form-select">
                    <option value="">Select tenant...</option>
                    @foreach (var tenant in Model.Tenants)
                    {
                        <option value="@tenant.Id">@tenant.FullName</option>
                    }
                </select>
                <span asp-validation-for="TenantId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Note</label>
                <textarea asp-for="Note" class="form-textarea"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="modal-footer">
                <a asp-page="../Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Check-in</button>
            </div>
        </form>

    </div>
</div>

