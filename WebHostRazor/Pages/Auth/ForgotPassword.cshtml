@page "/Auth/ForgotPassword"
@model WebHostRazor.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

<div class="text-center mb-4">
    <h2 class="fw-bold">Forgot Password</h2>
    <p class="text-muted">Enter your email to receive reset instructions</p>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.EmailSent)
{
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="ForgotPasswordRequest.Email" class="form-label">Email Address</label>
            <input asp-for="ForgotPasswordRequest.Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="ForgotPasswordRequest.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
    </form>
}
else
{
    <div class="text-center">
        <i class="fas fa-envelope fa-3x text-success mb-3"></i>
        <h4>Check Your Email</h4>
        <p class="text-muted">
            We've sent password reset instructions to your email address.
        </p>
        <a href="/auth/forgot-password" class="btn btn-link">Didn't receive the email? Try again</a>
    </div>
}

<hr class="my-4">

<div class="text-center">
    <p class="mb-0">
        Remember your password?
        <a href="/auth/login" class="text-decoration-none">Sign In</a>
    </p>
</div>
<style>
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    .custom-class {
        animation: fadeIn 0.5s ease-in;
    }
</style>